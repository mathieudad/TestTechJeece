doctype html
head
  meta(charset='utf-8')
  link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css', integrity='sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2', crossorigin='anonymous')
  style.
    body {
    background: #F1F3FA;
    }
    /* Profile container */
    .profile {
    position : absolute;
    right : 50%;
    top: 15%;
    width : 30%;
    }
    /* Profile sidebar */
    .profile-sidebar {
    padding: 20px 0 10px 0;
    background: #fff;
    }
    .profile-userpic img {
    float: none;
    margin-left:24%;
    width: 50%;
    height: 50%;
    -webkit-border-radius: 50% !important;
    -moz-border-radius: 50% !important;
    border-radius: 100% !important;
    }
    .profile-usertitle {
    text-align: center;
    margin-top: 20px;
    }
    .profile-userbuttons {
    text-align: center;
    margin-top: 10px;
    }
    #down{
    position : absolute;
    top : 35%;
    left : 60%;
    }
    #buton{
    position: absolute;
    left : 6%;
    }
    header{
       text-align : center;
       font-size: 1.6em;
    }
header
  strong Votre profil
br
div
  nav.nav.nav-pills.nav-justified
    a.nav-link(href='http://localhost:4000/home_page') Chercher un profil
    a.nav-link(href='http://localhost:4000/chat') Chat en ligne
    a.nav-link.active(href='http://localhost:4000/profil') Votre Profil
br
.profile
  .profile-sidebar
    .profile-userpic
      img.img-responsive(src='https://photo-cv.com/img/portfolio/fullsize/2.jpg', alt='')
    .profile-usertitle
      .profile-usertitle
        p= lastName
      .profile-usertitle
        p= firstName
      .profile-usertitle
        p= team
      .profile-usertitle
        p= dept
form#down(post='method')
  .form-group.mx-sm-3.mb-2
    label.sr-only(for='inputPassword1') Old Password
    input#inputPassword1.form-control(type='password', placeholder='Old Password', name='oldPassword')
  br
  .form-group.mx-sm-3.mb-2
    label.sr-only(for='inputPassword1') Password
    input#inputPassword1.form-control(type='password', placeholder='New Password', name='password')
  br
  .form-group.mx-sm-3.mb-2
    label.sr-only(for='inputPassword2') Confirm Password
    input#inputPassword2.form-control(type='password', placeholder='Confirm New Password', name='passwordConfirm')
  br
  br
  button#buton.btn.btn-primary.mb-2(type='submit') Confirm Change Password


