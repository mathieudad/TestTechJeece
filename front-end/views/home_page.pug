doctype html
head
  meta(charset='utf-8')
  link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css', integrity='sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2', crossorigin='anonymous')
  style.
    #select{
    text-align: center;
    text-align-last: center;
    }
    header{
    text-align : center;
    font-size: 1.6em;
    }
    #none{
      display: none;
    }

header
  strong Home Page
br
div
  nav.nav.nav-pills.nav-justified
    a.nav-link.active(href='http://localhost:4000/home_page') Chercher un profil
    a.nav-link(href='http://localhost:4000/chat') Chat en ligne
    a.nav-link(href='http://localhost:4000/profil') Votre Profil
br
form(method='GET')
  select#select.form-control.form-control-lg(name='dept')
    option(value='') --Choisissez une option--
    option(value='Business') Business
    option(value='RH') Ressources humaines (RH)
    option(value='supporTech') Support technique
    option(value='Marketing') Marketing
    option(value='Compliance') Compliance
    option(value='Finance') Finance
  br
  .input-group.mb-3
    input.form-control(type='text', placeholder="Entrez le nom", name='name')
  .input-group.mb-3
    input.form-control(type='text', placeholder="Entrez le numero de la team", aria-describedby='button-addon2', name='number')
    .input-group-append
      button#button-addon2.btn.btn-outline-secondary(type='submit') Rechercher
ul

table.table
  thead
    tr
      th(scope='col') #
      th(scope='col') First
      th(scope='col') Last
      th(scope='col') Dept
      th(scope='col') Team
      th(scope='col') Mail
  tbody
    each element,index in data
      tr
        th(scope='row')= index
          td= element.firstName
          td= element.lastName
          td= element.team.dept
          td= element.team.number
          form(method='get' action='http://localhost:4000/chat')
            td
              input(type='text', name= 'mail2', value= element.eMail, readonly="readonly", size= "25")
            input#none(type='text', name='mail1', value= mail, readonly="readonly")
            td
              button.btn.btn-info(type='submit') Contacter
    

